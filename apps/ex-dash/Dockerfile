FROM node:18-alpine AS base

ARG PUBLIC_EX_PRODUCTS_URL
ENV PUBLIC_EX_PRODUCTS_URL=$PUBLIC_EX_PRODUCTS_URL

FROM base AS builder
RUN apk update
RUN apk add --no-cache libc6-compat

WORKDIR /app
RUN yarn global add turbo
COPY . .
RUN turbo prune ex-dash --docker

FROM base AS installer
RUN apk update
RUN apk add --no-cache libc6-compat
WORKDIR /app

COPY --from=builder /app/out/json/ .
RUN yarn install

COPY --from=builder /app/out/full/ .

RUN yarn turbo build

FROM base AS runner
WORKDIR /app

RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs
USER nextjs

COPY --from=installer --chown=nextjs:nodejs /app/apps/ex-dash/.next/standalone ./
COPY --from=installer --chown=nextjs:nodejs /app/apps/ex-dash/.next/static ./apps/ex-dash/.next/static
COPY --from=installer --chown=nextjs:nodejs /app/apps/ex-dash/public ./apps/ex-dash/public

RUN mv apps/ex-dash/server.js apps/ex-dash/server.mjs

CMD node apps/ex-dash/server.mjs